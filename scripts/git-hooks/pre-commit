#!/bin/sh

# sanity-check the changes and ensure grammar.rs is built for rustfmt
cargo check --all-targets

# warn and block commit for rustfmt formatting changes
cargo fmt --all -- --check
exit_status="$?"
if [ "$exit_status" -ne 0 ]; then
    >&2 echo "Review rustfmt changes"
    cargo fmt
fi

exit "$exit_status"
